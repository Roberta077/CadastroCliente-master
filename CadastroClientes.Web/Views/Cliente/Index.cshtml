@model IEnumerable<CadastroClientes.Domain.Entities.Cliente>
 
@{
    ViewData["Title"] = "Clientes";
}
 
<h2>Clientes</h2>
 
<table class="table">
<thead>
<tr>
<th>Nome</th>
<th>CPF</th>
<th>Ações</th>
</tr>
</thead>
<tbody>
        @foreach (var cliente in Model)
        {
<tr>
<td>@cliente.Nome</td>
<td>@cliente.CPF</td>
<td>
<a asp-action="Edit" asp-route-id="@cliente.Id">Editar</a> |
<a asp-action="Delete" asp-route-id="@cliente.Id">Excluir</a>
</td>
</tr>
        }
</tbody>
</table>
 
<a asp-action="Create">Cadastrar Novo Cliente</a>